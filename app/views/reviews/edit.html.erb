<%= form_with model: [ @product, @review ], method: :patch do |form| %>
  <div class='mb-3 '>
    <label class='col-md-4 control-label' for='product_name'>Edit Comment</label>
    <div class='col-md-4'>
      <%= form.text_field :content, class:'form-control input-md' %>
    </div>
  </div>
  <div class='actions'>
    <%= form.submit 'Post', class: 'btn btn-warning' %>
  </div>
<% end %>
