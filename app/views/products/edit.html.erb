<%= form_with(model: @product, local: true) do |form| %>
  <% if @product.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@product.errors.count, 'error') %> prohibited this product to add:</h2>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='mb-3'>
  	<div class='mb-3 input-group'>
  		<%= form.file_field :images, class: 'form-control', multiple: true %>
		</div>
    <label class='col-md-4 control-label' for='product_name'>Product Name</label>
    <div class='col-md-4'>
      <%= form.text_field :product_name, class:'form-control input-md', placeholder:'Product Name' %>
    </div>
  </div>
  <div class='mb-3'>
    <label class='col-md-4 control-label' for='product_name'>Product Price</label>
    <div class='col-md-4'>
      <%= form.text_field :product_price, class:'form-control input-md', placeholder:'Product Price' %>
    </div>
  </div>
  <div class='actions'>
    <%= form.submit class: 'btn btn-dark'%>
  </div>
<% end %>

